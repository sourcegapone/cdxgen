{
  "include": ["*.js", "bin/**/*.js", "lib/**/*.js"],
  "exclude": ["*.poku.js", "lib/**/*.poku.js", "types/**/*", "contrib/**"],
  "compilerOptions": {
    "allowJs": true,
    // Generate d.ts files
    "declaration": true,
    // This compiler run should
    // only output d.ts files
    "emitDeclarationOnly": true,
    "outDir": "types",
    "declarationMap": true,
    "skipLibCheck": true
  }
}
